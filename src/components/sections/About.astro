---
import Section from "../Section.astro";

import CV from "@cv";
const { summary } = CV.basics;
---

<Section title="About">
  {
    Array.isArray(summary) ? (
      summary.map((item) => (
        <p class="font-mono opacity-75 text-sm text-justify print:font-sans">{item}</p>
      ))
    ) : (
      <p class="font-mono opacity-75 print:font-sans">{summary}</p>
    )
  }
</Section>
